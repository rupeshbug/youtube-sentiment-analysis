{
  "manifest_version": 3,
  "name": "YouTube Sentiment Analyzer",
  "version": "1.0",
  "description": "Analyze YouTube comments' sentiment instantly.",
  "permissions": ["scripting", "activeTab"  ],
  "host_permissions": ["https://www.youtube.com/*","http://localhost:5000/*"],
  "action": {
    "default_popup": "popup.html"
  }
}